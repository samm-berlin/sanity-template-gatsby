{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": "../",
    "paths": {
      "@/*": ["./web/src/*"]
    },
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "../jsconfig.json", "types", "modulesBackup/HeroSlider", "modulesBackup/Hero", "modulesBackup/FurtherReading"],
  "exclude": ["node_modules", "public", ".cache", ".ignore"],
  "files": [
    "types/block-content-to-react.d.ts",
    "types/svg.d.ts"
  ]
}
